    <data>

        <import type="android.view.View" />

        <variable
            name="reaction"
            type="com.vandenbussche.emiel.projectsbp.models.Reaction" />
    </data>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
