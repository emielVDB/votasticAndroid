<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="pollList"
            type="com.vandenbussche.emiel.projectsbp.models.PollList" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".gui.fragments.NewsFragment">
        <TextView
            android:text="You are not following any pages yet"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:visibility="@{(pollList.data != null &amp;&amp; pollList.data.size() != 0)? View.VISIBLE : View.GONE}"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/pollsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:items="@{pollList.data}"
            android:visibility="@{(pollList.data != null &amp;&amp; pollList.data.size() != 0)? View.GONE : View.VISIBLE}"
            />

    </FrameLayout>
</layout>